<!DOCTYPE html>
<html lang="uk">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <title>Реєстрація</title>
</head>
<body>
  <header class="header">
    Реєстрація
  </header>
  <main class="container">
    <form action="/register" method="POST" class="form">
      <div class="form-group">
        <label for="username">Ім'я користувача:</label>
        <input type="text" id="username" name="username" required maxlength="50">
      </div>
      <div class="form-group">
        <label for="password">Пароль:</label>
        <input type="password" id="password" name="password" required>
      </div>
      <div class="form-group">
        <label for="role">Роль:</label>
        <select id="role" name="role" required>
          <option value="student">Студент</option>
          <option value="admin">Адміністратор</option>
        </select>
      </div>
      <div id="studentFields" class="form-group">
        <label for="firstName">Ім'я:</label>
        <input type="text" id="firstName" name="firstName">
        
        <label for="lastName">Прізвище:</label>
        <input type="text" id="lastName" name="lastName">
      </div>
      <button type="submit" class="btn btn-primary">Зареєструватися</button>
    </form>

    <!-- Кнопка для переходу на сторінку логіну -->
    <div class="navigation">
      <a href="/login" class="btn btn-link">Вже маєте аккаунт? Увійти</a>
    </div>
  </main>
  <footer class="footer">
    Система обліку успішності студентів
  </footer>
  <script>
    const roleSelect = document.getElementById('role');
    const studentFields = document.getElementById('studentFields');

    roleSelect.addEventListener('change', function() {
      if (this.value === 'student') {
        studentFields.classList.remove('hidden');
        studentFields.querySelectorAll('input').forEach(field => {
          field.disabled = false;
        });
      } else {
        studentFields.classList.add('hidden');
        studentFields.querySelectorAll('input').forEach(field => {
          field.disabled = true;
        });
      }
    });

    roleSelect.dispatchEvent(new Event('change'));
  </script>
</body>
</html>
